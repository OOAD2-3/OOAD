<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ooad.demo.mapper.QuestionMapper">
    <resultMap id="tab_question" type="com.ooad.demo.entity.Question">

        <result property="seminarId" column="pre_id"/>
        <result property="teamId" column="student_id"/>
        <result property="questionScore" column="question_score"/>
        <result property="asked" column="is_asked"/>

    </resultMap>



    <select id="findBySeminarIdAndTeamId" parameterType="Integer" resultMap="tab_question" resultType="com.ooad.demo.entity.Question">
        SELECT * FROM question WHERE seminar_id=#{seminarId} AND team_id=#{teamId}
    </select>

    <insert id="insertBySeminarIdAndTeamIdAndQuestionScore" parameterType="com.ooad.demo.entity.Question" useGeneratedKeys="true" keyProperty="id">
        insert into question(seminar_id,team_id,question_score)
        values (#{seminarId},#{teamId},#{questionScore})
    </insert>

    <select id="findByTeamId" parameterType="Integer" resultMap="tab_question" resultType="com.ooad.demo.entity.Question">
        SELECT * FROM question WHERE team_id=#{teamId}
    </select>

    <update id="updateQuestionScore" parameterType="com.ooad.demo.entity.Question">
        update question
        set question_score=#{questionScore,jdbcType=FLOAT}
        where seminar_id=#{seminarId}
              and team_id=#{teamId}
    </update>
</mapper>