<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ooad.demo.mapper.MenuMapper">
    <resultMap id="tab_menu" type="com.ooad.demo.entity.Menu" >
        <result property="id" column="id"/>
        <result property="url" column="url"/>
        <result property="path" column="path"/>
        <result property="component" column="component"/>
        <result property="name" column="name"/>
        <result property="keepAlive" column="keep_alive"/>
        <result property="requireAuth" column="require_auth"/>
        <result property="parentId" column="parent_id"/>
        <collection property="roles" ofType="com.ooad.demo.entity.Role">
            <result property="id" column="rid"/>
            <result property="roleName" column="role_name"/>
            <result property="nameZW" column="name_zw"/>
        </collection>
    </resultMap>

    <select id="findAll" resultMap="tab_menu">
        SELECT m.*,r.id rid,r.role_name,r.name_zw
        FROM menu m LEFT JOIN menu_role mr
            ON m.id=mr.menu_id
        LEFT JOIN role r
            ON mr.role_id=r.id
    </select>

    <select id="findMenuRoleByMenuId" parameterType="Integer" resultMap="tab_menu">
        SELECT m.*,r.id rid,r.role_name,r.name_zw
        FROM menu m LEFT JOIN menu_role mr
            ON m.id=mr.menu_id
        LEFT JOIN role r
            ON mr.role_id=r.id
        WHERE m.id=#{menuId}
    </select>

</mapper>