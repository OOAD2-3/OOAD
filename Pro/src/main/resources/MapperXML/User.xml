<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ooad.demo.mapper.UserMapper">
    <resultMap id="tab_user_role" type="com.ooad.demo.entity.User">
        <result property="id" column="id"/>
        <result property="account" column="account"/>
        <result property="password" column="password"/>
        <collection property="roles" ofType="com.ooad.demo.entity.Role">
            <result property="id" column="rid"/>
            <result property="roleName" column="role_name"/>
            <result property="nameZW" column="name_zw"/>
        </collection>
    </resultMap>

    <resultMap id="tab_user" type="com.ooad.demo.entity.User">
        <result property="selfieUrl" column="selfie_url"/>
        <result property="active" column="is_active"/>
        <result property="msgInterval" column="msg_interval"/>
    </resultMap>

    <select id="findById" parameterType="Integer" resultMap="tab_user">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <select id="findByAccount" parameterType="String" resultMap="tab_user">
        SELECT * FROM user WHERE account=#{account}
    </select>

    <!--id字段重复-->
    <select id="findUserRoleByUserId" parameterType="Integer" resultMap="tab_user_role">
        SELECT u.*,r.id rid,r.role_name,r.name_zw
        FROM user u LEFT JOIN user_role ur
            ON u.id=ur.user_id
        LEFT JOIN role r
            ON ur.role_id=r.id
        WHERE u.id=#{userId}
    </select>

    <select id="findUserRoleByUsername" parameterType="String" resultMap="tab_user_role">
        SELECT u.*,r.id rid,r.role_name,r.name_zw
        FROM user u LEFT JOIN user_role ur
            ON u.id=ur.user_id
        LEFT JOIN role r
            ON ur.role_id=r.id
        WHERE u.account=#{username}
    </select>
</mapper>